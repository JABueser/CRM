@model VMS.Models.Volunteer

@{
    ViewBag.Title = "Delete";
}

<h3 class="text-center">Are you sure you want to delete this volunteer?</h3>
    <hr />
    <div class="col-lg-4" style="margin-left: 20px;">
        <table class="table table-sm">
            <tr>
                <td>Frist Name</td>
                <td>@Html.DisplayFor(model => model.FirstName)</td>
            </tr>

            <tr>
                <td>Last Name</td>
                <td>@Html.DisplayFor(model => model.LastName)</td>
            </tr>

            <tr>
                <td>E-Mail</td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>

            <tr>
                <td>Phone</td>
                <td>@Html.DisplayFor(model => model.Phone)</td>
            </tr>

            <tr>
                <td>Total Hours</td>
                <td>@Html.DisplayFor(model => model.TotalHours)</td>
            </tr>
        </table>
      

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
            @*<div class="form-actions no-color col-lg-4" style="margin-left:20px;">*@
                <input type="submit" value="Delete" class="btn btn-danger" />
                <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Url.Action("Index", "Volunteers")'" />
        }
       
    </div>
