@model VMS.Models.ViewHourViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Hours By Category</h2>
<!-- Trigger/Open The Modal -->
<button class="btn btn-primary btn-sm" id="myBtn">Directions</button>
<br /><br />
<br />
<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <p>Enter in the date ranges for the total amount of hours worked by each category. If you want to see all total hours from the beginning of time, please leave the fields blank.</p>

    </div>

</div>
<script>
    // Get the modal
    var modal = document.getElementById('myModal');
    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");
    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];
    // When the user clicks the button, open the modal
    btn.onclick = function () {
        modal.style.display = "block";
    }
    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        modal.style.display = "none";
    }
    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>

<h4>Please enter in the dates of which you want your total hours to be calculated:</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="row">
            <div class="col-lg-3">
                Start Date:
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", @max = "9999-12-31" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-3">
                End Date:
                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", @max = "9999-12-31" } })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>

        </div>
        <br />
        <div class="form-group">
            <div class="text-left">
                <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}
