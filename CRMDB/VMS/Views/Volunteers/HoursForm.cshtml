@model VMS.Models.ViewHourViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Hours By Category</h2>

<h4>Please enter in the dates of which you want your total hours to be calculated:</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="row">
            <div class="col-lg-3">
                Start Date:
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", @max = "9999-12-31" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-3">
                End Date:
                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", @max = "9999-12-31" } })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>

        </div>
        <br />
        <div class="form-group">
            <div class="text-left">
                <input type="submit" value="Submit" class="btn btn-primary btn-lg" />

            </div>
        </div>

    </div>
}
<button class="btn btn-primary btn-sm" type="button" data-toggle="modal" data-target="#myModal" id="directions">Directions</button>
<br /><br />
<br />
<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">

                    <h4 class="modal-title">Directions</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Enter in the date ranges for the total amount of hours worked by each category. If you want to see all total hours from the beginning of time, please leave the fields blank.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>