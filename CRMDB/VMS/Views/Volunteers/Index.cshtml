
@model VMS.Models.HourViewModel

@{
    ViewBag.Title = "Home";
}

<div class="form-horizontal">
    <div class="row">
        <div class="col-lg-3">
            From:
            <input class="form-control text-box single-line" data-val="true" data-val-date="The field StartDate must be a date." data-val-required="The StartDate field is required." id="datepicker_from" name="StartDate" type="date" value="">
            <span class="field-validation-valid text-danger" data-valmsg-for="StartDate" data-valmsg-replace="true"></span>
        </div>
        <br />
        <div class="col-lg-3">
            To:
            <input class="form-control text-box single-line" data-val="true" data-val-date="The field EndDate must be a date." data-val-required="The EndDate field is required." id="datepicker_to" name="EndDate" type="date" value="">
            <span class="field-validation-valid text-danger" data-valmsg-for="EndDate" data-valmsg-replace="true"></span>
        </div>
    </div>
</div>
<br />
<button class="btn btn-primary" id="btnSelectedRows">Get Emails</button>
<br />
<br />

<table id="volunteerTable" class="table table-bordered" >
    <thead>
        <tr>
            <th class="select-checkbox"><input id="checkBox" type="checkbox"></th>
            <th class="text-center">
                Date Created
            </th>
            <th class="text-center">
                First Name
            </th>
            <th class="text-center">
                Last Name
            </th>
            <th class="text-center">
                E-Mail Address
            </th>
            <th class="text-center">
                Church
            </th>
            <th class="text-center" >
                Category(s)
            </th>
            <th class="text-center">
                Total Hours
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Vols)
        {
            <tr>
                <td></td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Church)
                </td>
                <td>
                    @foreach (var c in item.Categories)
                    {
                        <span class="badge badge-primary">@c.Category1</span>
                    }
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.TotalHours)
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-primary bt-sm" data-toggle="modal" data-target="#modalId" onclick="addHoursModal(@item.VolunteerID, '@item.FirstName', '@item.LastName')">
                        Add Hours
                    </button>
                    <br />

                    @Html.ActionLink("Edit", "Edit", new { id = item.VolunteerID })   <br />                 
                    @Html.ActionLink("Details", "Details", new { id = item.VolunteerID }) <br />
                    @Html.ActionLink("Delete", "Delete", new { id = item.VolunteerID })
                
                </td>
            </tr>

            //modal here
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Emails</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p id="emailList"> </p>
            </div>
            <div class="modal-footer">
                <button id="copyToClipboard" type="button" class="btn btn-primary">Copy</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="modalId">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm())
            {
                <div class="modal-header">
                    <h3>Add Hours</h3>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">

                    <p id="modalVolunteerName" style="font-size:x-large"></p>

                    <div>
                        <label for="Date">Date:</label>
                        <input class="form-control text-box single-line" data-val="true" data-val-date="The field Date must be a date." data-val-required="The Date field is required." id="Date" name="Date" type="date" value="01/01/0001">
                        <span class="field-validation-valid text-danger" data-valmsg-for="Date" data-valmsg-replace="true"></span>
                    </div>
                    <br />
                    <div>
                        <label for="Hours">Hours Worked:</label>
                        <input class="form-control text-box single-line" data-val="true" data-val-number="The field Hours must be a number." data-val-required="The Hours field is required." id="Hours" name="Hours" type="number" value="0" min="0">
                        <span class="field-validation-valid text-danger" data-valmsg-for="Hours" data-valmsg-replace="true"></span>
                    </div>
                    <br />
                    <div>
                        <label for="CatName">Categories:</label>
                        What Category Do The Hours Apply To? <br />
                        @Html.DropDownListFor(m => Model.Categories,
                                           new SelectList(Model.Categories, "CategoryID", "Category1", Model.CatName),
                                           new { @id = "CatName", @Name = "CatName" })
                        <input id="VolID" name="VolID" type="hidden" value="volunteerId" />
                    </div>
                    <br />
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.18/sl-1.3.0/datatables.min.css" />
@section scripts{
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.18/sl-1.3.0/datatables.min.js"></script>
    <script src="~/Scripts/ViewScripts/app.js"></script>
}
