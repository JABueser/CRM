@model CRM.Models.VolunteerViewModel

@{
    ViewData["Title"] = "List of Volunteers";
}

<script type="text/javascript">
    function filter() {
        var val = $("#ddlInterest").val();
        $.ajax({
            url: "/Volunteer/FilterVolunteers",
            type: "GET",
            data: { interest: val }
        })
            .done(function (partialViewResult) {
                $("#dvVolunteerList").html(partialViewResult);
            });
    }


    $(document).ready(function () {
        $("#ddlInterest").on('change', filter);
    });
</script>


